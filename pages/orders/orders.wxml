<!--导航条-->  
<view class="navbar">  
  <view wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap"><text>{{item}}</text></view>  
</view>  
<view class='container'>
<!--未完成-->  
<view hidden="{{currentTab!==0}}">  
    <view class='receive'>
        <view wx:if="{{!blank}}" class='recCardTag'>
            <text>我接到的</text>
        </view>
        <view class='orderCard'>
            <view hover-class="answerHover1" class='ongoRecList' wx:key="{{item.key}}" wx:for="{{ongoRecListCount}}" >
                    <view class='rowFlex' data-orderstate="{{item.state}}" data-order-id="{{item.ordnum}}" bindtap="toRecDetails">
                        <view class='reward'>
                            <view class='rcText'>
                                    <text>赏金</text>
                            </view>
                            <view class='rnText'>
                                <text>{{item.money}}</text>
                            </view>
                            <view class='reText'>
                                <text>RMB</text>
                            </view>
                        </view>
                        <view class='body'>
                            <view class='exInstance'>
                                <text>{{item.exInstance}} 送至</text> 
                            </view>
                            <view class='sdInstance'>
                                <view class='sdIText'><text>{{item.sdInstance}}</text></view>
                                <view class='exTagWor' wx:if="{{item.urgent === 'true' }}">
                                    <view class='tagText'><text>加急</text></view> 
                                </view>
                            </view>
                            <view class='fetchDe'>
                                <view class='fetchCode'>
                                    <text>{{item.code}}</text>
                                </view>
                                <view class='fetchName'>
                                    <text>姓名:{{item.pubname}}</text>
                                </view>
                                <view class='fatchPhone'>
                                    <text>尾号:{{item.weihao}}</text>
                                </view>
                            </view>
                            <view class='exSum'>
                                    <view class='tagText'><text>重量{{item.weight}} | {{item.size}} | {{item.losetime}}前取货</text></view>
                            </view>
                        </view>
                    </view>
                    <view class='rbuttonA'>
                            <view wx:if="{{item.state==0}}" class='waitAffirm'><text>待对方确认</text></view>
                            <view wx:if="{{item.state==4}}" class='abor'><text>异常</text></view>
                    </view>
            </view> 
        </view>
    </view>
    <view class='myPub'>
        <view wx:if="{{!blank}}" class='pubCardTag'>
            <text>我发布的</text>
        </view>
        <view class='orderCard'>
            <view hover-class="answerHover1" class='ongoPubList' wx:key="{{item.key}}" wx:for="{{ongoPubListCount}}">
                <view class='rowFlex' data-order-id="{{item.ordnum}}" bindtap="toPubDetails">
                        <view class='reward'>
                            <view class='rcText'>
                                    <text>赏金</text>
                            </view>
                            <view class='rnText'>
                                <text>{{item.money}}</text>
                            </view>
                            <view class='reText'>
                                <text>RMB</text>
                            </view>
                        </view>
                        <view class='body'>
                            <view class='exInstance'>
                                <text>{{item.exInstance}} 送至</text> 
                            </view>
                            <view class='sdInstance'>
                                <view class='sdIText'><text>{{item.sdInstance}}</text></view>
                                <view class='exTagWor' wx:if="{{item.urgent === 'true' }}">
                                    <view class='tagText'><text>加急</text></view> 
                                </view>
                            </view>
                            <view class='exTag'>
                                <view class='exTag exTagWei'>
                                    <view class='tagText'><text>重量{{item.weight}} | {{item.size}}</text></view>
                                </view>
                                <view class='exTag exTagTime'>
                                    <view class='tagText'><text>{{item.losetime}}前送达</text></view>
                                </view>
                            </view>
                            <view class='pubisher'>
                                <image class='pubIcon' src="{{pubIcon}}"></image>
                                <view wx:if="{{item.Uname}}" class='pubName'>
                                <text>接单人：{{item.Uname+' '+item.Uid}}</text>
                                </view>
                                <view wx:else class='pubName'>接单人：暂无</view>
                            </view>  
                        </view>
                </view>
                <view class='rbuttonA'>
                    <view wx:if="{{item.state==1}}" class='waitRec'><text>待接单</text></view>
                    <view wx:if="{{item.state==2}}" class='haveRec'><text>待送达</text></view>
                    <view wx:if="{{item.state==5}}" class='abor'><text>异常</text></view>
                    <view wx:if="{{item.state==0}}" class='waitAffirm'><text>待我确认</text></view>
                    
                </view>
            </view> 
        </view>
    </view>
    <view class="blankArea" wx:if="{{blank}}">
        <image class='blankIcon' src='{{blankIcon}}'></image>
    </view>
    <view class='prompt'>
        <view class='lineCss'></view>
        <text>快去发布/接收订单吧</text>
        <view class='lineCss'></view>
    </view>
</view>  
  

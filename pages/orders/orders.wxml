                                    <view class='exTag finexTagTime'>
                                        <view class='tagText'><text>{{item.losetime}}前送达</text></view>
                                    </view>
                                </view>
                                <view class='finPubisher'>
                                    <image class='pubIcon' src="{{pubIcon}}"></image>
                                    <view class='pubName'>
                                    <text>接单人：{{item.recName}}</text>
                                    </view>
                                </view>  
                            </view>
                    </view>
                    <view class='rbuttonAfin'>
                            <view wx:if="{{item.state==3}}" class='finOrd'><text>已完成</text></view>
                            <view wx:if="{{item.state==4}}" class='finOrd'><text>已过期</text></view>  
                            <view wx:if="{{item.state==5}}" class='abor'><text>异常</text></view>
                    </view>
                </view> 
            </view>
        </view>
        <view wx:if="{{atEnd}}" class='prompt'>
            <view class='lineCss'></view>
            <text>下拉加载更多</text>
            <view class='lineCss'></view>
        </view>  
        <view wx:else class='prompt'>
            <view class='lineCss'></view>
            <text>我是个有底线的黄牛</text>
            <view class='lineCss'></view>
        </view> 
</view>  

</view>  
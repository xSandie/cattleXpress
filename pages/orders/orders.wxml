            <view class='orderCard'>
                <view wx:if="{{!item.message}}" hover-class="answerHover1" class='ongoPubList' wx:for="{{finPubListCount}}" wx:key="{{item.key}}">
                    <view class='rowFlex' data-order-id="{{item.ordnum}}"  bindtap="toPubDetails">
                            <view class='reward'>

<view class="container">
    <view class="header">
        <view class="htArea">
            <view class="Lheader">
            <text>教务系统认证</text>
        </view>
        <view class="Sheader">
            <text>为了安全，我们需要确认您的在校身份</text>
        </view>
        </view>
    </view>
    <form bindsubmit="certif" class="certifForm">
        <view class="studentOrTeacher">
            <view class="{{studentOrMaster?'studentsel':'unselectedStu'}}" bindtap="selStudent">
                <text>本科生</text>
            </view>
            <view class="{{studentOrMaster?'unselectedTeach':'teachersel'}}" bindtap="selMaster">
                <text>研究生</text>
            </view>
            <switch checked="{{studentOrMaster}}" hidden/>
            <!--true为学生，false为老师-->
        </view>
        <view hover-class="answerHover" class="selectSchool" bindtap="schoolInput">
            <image class="schoolIcon" src="{{schoolIcon}}"></image>
            <view class="cline"></view>
            <view class="schoolInput" ><text>{{schoolName}}</text></view>
        </view>
        <view class="inputA">
            <view class="inA">
                <input type="number" name="schoolNumb" class="inputMy" placeholder="账号" bindtap="change1"/>
                <view class="row" style='background:{{row1?"linear-gradient(90deg, #f9a93e, #fed25c)":"#EEF1FD"}}'></view>
            </view>
            <view class="inA1">
                <input type="text" name="password" class="inputMy" placeholder="密码" password bindtap="change2"/>
                <view class="row" style='background:{{row2?"linear-gradient(90deg, #f9a93e, #fed25c)":"#EEF1FD"}}'></view>
            </view>
            <view class="inArea">
              <view>
                <input type="text" name="verifiedCode" class="inputYzm" placeholder="验证码" bindtap="change3"/>
                <view class="row" style='background:{{row3?"linear-gradient(90deg, #f9a93e, #fed25c)":"#EEF1FD"}}'></view>
              </view>
              <view bindtap='changeCode' class="codeA">
                  <text class="codeText">看不清，换一张</text>
                  <image class="codeImage" mode='aspectFit' src="{{verifCodePath}}"></image>
              </view>
            </view>
            <view class="btnA">
                <button formType="submit" hover-class="defaultHover">
                    <text>通过验证</text>
                    <image class="passCertifIcon" src="{{passCertifIcon}}"></image>
                </button>
            </view>
        </view>
    </form>
    <view class='backHome' bindtap='backHome' hover-class='backHomeHover'>
        返回首页
    </view>
</view>
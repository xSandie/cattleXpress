.container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-left: 40rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
    background-color: #f5f8fd;
}

.header {
    width: 100%;
    height: 216rpx;
    padding-top: 30rpx;
    box-sizing: border-box;
}

.htArea {
    height: 128rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.Lheader {
    font-size: 60rpx;
    font-weight: bold;
    color: #373c46;
}

.Sheader {
    font-size: 32rpx;
    color: #999ba1;
}

.studentOrTeacher {
    width: 265rpx;
    height: 40rpx;
    box-sizing: border-box;
    font-size: 22rpx;
    background: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
}

.studentsel {
    background: linear-gradient(90deg, #f9a93e, #fed25c);
    color: white;
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    border-top-left-radius: 22rpx;
    border-bottom-left-radius: 22rpx;
    width: 140rpx;
    height: 100%;
}

.unselectedStu {
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    color: #999ba1;
    width: 140rpx;
    height: 100%;
}

.unselectedTeach {
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    color: #999ba1;
    width: 125rpx;
    height: 100%;
}

.teachersel {
    background: linear-gradient(90deg, #f9a93e, #fed25c);
    color: white;
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    border-top-right-radius: 22rpx;
    border-bottom-right-radius: 22rpx;
    width: 125rpx;
    height: 100%;
}

.defaultHover {
    color: #6D6141;
}

.selectSchool {
    width: 100%;
    height: 82rpx;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0rpx 6rpx 10rpx #eef1fd;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #999ba1;
}

.schoolIcon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 22rpx;
    margin-left: 24rpx;
    z-index: 5;
}

.cline {
    background: #999ba1;
    width: 1rpx;
    height: 40rpx;
    margin-right: 24rpx;
}

.schoolInput {
    color: #999ba1;
    font-size: 36rpx;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 5;
}

.inputA {
    width: 100%;
    height: auto;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0rpx 6rpx 10rpx #eef1fd;
    margin-top: 30rpx;
    padding: 24rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.row {
    width: 100%;
    height: 1rpx;
}

input {
    margin-top: 48rpx;
    height: 50rpx;
    color: #373c46;
    font-size: 36rpx;
    width: 100%;
}

button {
    margin-top: 24rpx;
    z-index: 5;
    background: linear-gradient(90deg, #fed25c, #f9a93e);
    border-radius: 10rpx;
    height: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: white;
    font-weight: bold;
    box-sizing: border-box;
}

button::after {
    border: none;
}

.passCertifIcon {
    width: 40rpx;
    height: 40rpx;
}

.codeA {
    margin-top: 20rpx;
    color: #999ba1;
    font-size: 22rpx;
    text-align: end;
}

.codeText {
    margin-top: 12rpx;
    margin-bottom: 12rpx;
}

.codeImage {
    height: 100rpx;
    width: 300rpx;
    background: #f5f8fd;
    border-radius: 10rpx;
    vertical-align: bottom;
}

.btnA {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-content: flex-start;
    box-sizing: border-box;
}

.defaultHover {
    color: white;
    background: linear-gradient(90deg, #b39340, #af782c);
}

.answerHover {
    color: #999ba1;
    background: rgb(240, 240, 245);
}

.answerHover1 {
    background: #DADEE2;
}

.inArea {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}

.backHome {
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    color: #f9a93e;
    width: 670rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}

.backHomeHover {
    color: #af782c;
}
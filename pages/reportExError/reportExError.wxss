.container {
    width: 100%;
    height: 100%;
    background: #faaf42;
    padding-left: 40rpx;
    padding-right: 40rpx;
    display: flex;
    flex-direction: column;
}

.floatCard {
    box-sizing: border-box;
    padding: 24rpx;
    width: 670rpx;
    height: auto;
    z-index: 15;
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
}

.tline {
    height: 1rpx;
    width: 100%;
    background: linear-gradient(90deg, #f9a93e, #fed25c);
    margin-bottom: 10rpx;
    margin-top: 10rpx;
}

.fakeBtn {
    height: 100rpx;
    width: 100%;
    color: #faaf42;
    background: white;
    font-size: 32rpx;
    font-weight: bold;
}

button {
    margin: 0rpx;
    margin-top: 30rpx;
    border-radius: 16rpx;
    box-sizing: border-box;
    background: linear-gradient(90deg, #f9a93e, #fed25c);
    height: 100rpx;
    padding: 30rpx;
    width: 246rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    border: 0rpx;
}

button::after {
    border: none;
}

.answerHover {
    background: rgba(238, 241, 253, 0.76);
}

.Ti {
    color: #999ba1;
    font-size: 20rpx;
    font-weight: bold;
}

form {
    z-index: 15;
}

.exLocDe {
    box-sizing: border-box;
    height: 138rpx;
    width: 100%;
    padding-left: 24rpx;
    padding-right: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
}

.exLogo {
    height: 90rpx;
    width: 90rpx;
    border-radius: 10rpx;
}

.exDetail {
    position: relative;
    bottom: 1rpx;
    height: 66rpx;
    width: 380rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.exInstance {
    position: relative;
    left: -1rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #373c46;
}

.exLocTime {
    font-size: 20rpx;
    color: #999ba1;
}

.cline {
    width: 1rpx;
    height: 90rpx;
    margin-left: 40rpx;
    background-color: #999ba1;
}

.inputCorrect {
    width: 100%;
    font-size: 32rpx;
    color: #373c46;
}

.selExCon {
    font-size: 36rpx;
    color: #373c46;
    width: 100%;
}

.answerHover {
    color: #999ba1;
    background: rgb(240, 240, 245);
}
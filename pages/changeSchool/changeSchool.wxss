.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

button {
    color: #faaf42;
    font-size: 36rpx;
    height: 100%;
    width: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    background: none;
    border: none;
    margin: 0;
    padding: 0;
}

button::after {
    border: none;
}

form {
    display: flex;
    flex-direction: row;
    padding: 0rpx;
}

.selectSchool {
    width: 100%;
    height: 82rpx;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0rpx 6rpx 10rpx #eef1fd;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    color: #999ba1;
    box-sizing: border-box;
}

.schoolIcon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 22rpx;
    margin-left: 24rpx;
    z-index: 5;
}

.cline {
    background: #999ba1;
    width: 1rpx;
    height: 40rpx;
    margin-right: 24rpx;
}

.schoolInput {
    color: #999ba1;
    font-size: 36rpx;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 5;
    width: 430rpx;
}

.search {
    color: #faaf42;
    font-size: 36rpx;
    height: 100%;
    width: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}

.Ti {
    color: #faaf42;
    font-size: 20rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.answerArea {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
}

.answer {
    margin-top: 30rpx;
    width: 100%;
    height: auto;
    box-sizing: border-box;
    padding: 24rpx;
    display: flex;
    flex-direction: column;
    background: white;
    box-shadow: 0rpx 6rpx 10rpx #eef1fd;
    border-radius: 16rpx;
}

.con {
    font-size: 36rpx;
    color: #373c46;
}

.answerHover {
    color: #999ba1;
    background: rgb(240, 240, 245);
    border-top-right-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}

.answerHover1 {
    background: rgb(240, 240, 245);
}
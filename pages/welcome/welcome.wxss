page{
  background: white;
}
.container{
  background: white;
}
.welcome {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    justify-content: space-between;
}

.welcomeImg {
    width: 750rpx;
    height: 667rpx;
}

button {
    background: none;
    height: 80rpx;
    width: 280rpx;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #FFFFFF;
    font-weight: bold;
    border-radius: 40rpx;
    border: 2rpx solid #ffffff;
    background: linear-gradient(270deg, #fed25c, #f9a93e);
}

button::after {
    border: none
}

.welcomeText {
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 60rpx;
    line-height: 72rpx;
    font-weight: bold;
    color: #373c46;
}

.answerHover {
    color: #999ba1;
    background: rgb(240, 240, 245);
    border-radius: 10rpx;
}
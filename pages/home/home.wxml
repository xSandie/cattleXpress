<view class='container'>
    <view class='select'>
        <view class='school'>
            <block class='locIcon'>
            <image class='locIcon' src="{{loctionSrc}}"></image>
            </block>
            <view class='schoolText'>
                <view class='realSNText'><text>{{mySchoolName}}</text></view>
            </view>
        </view>
        <view class='mainSelect'>
            <view class='expressLoc'>
                <view class='elIcon'>
                    
                </view>
                <view class='lText'>
                    <view class='lTextLarge'>
                        <text>快递站点</text>
                    </view>
                    <view class='lTextSmall'>
                        <text>选择取快递的站点</text>
                    </view>
                </view>
            </view>
            <view class='sendLoc'>
                <view class='slIcon'>
                    
                </view>
                <view class='lText'>
                    <view class='lTextLarge'>
                       <text>送达地点</text>
                    </view>
                    <view class='lTextSmall'>
                       <text>选择快递送达地点</text> 
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class='list'>
        <view class='listItem' wx:for="{{listCount}}">
            <view class='rowFlex'>
                <view class='reward'>
                    <view class='rTextG'>
                        <view class='rcText'>
                           <text>赏金</text>
                        </view>
                        <view class='rnText'>
                            <text>{{reward}}</text>
                        </view>
                        <view class='reText'>
                            <text>RMB</text>
                        </view>
                    </view>
                </view>
                <view class='body'>
                    <view class='exInstance'>
                       <text>{{exInstance}} 送至</text> 
                    </view>
                    <view class='sdInstance'>
                        <view class='sdIText'><text>{{sdInstance}}</text></view>
                        <view class='exTagWor'>
                            <view class='tagText'><text>加急</text></view> 
                        </view>
                    </view>
                    <view class='exTag'>
                        <view class='exTag exTagWei'>
                            <view class='tagText'><text>重量{{exWeight}} | {{exSize}}</text></view>
                        </view>
                        <view class='exTag exTagTime'>
                            <view class='tagText'><text>{{exExTime}}前取货</text></view>
                        </view>
                    </view>
                    <view class='pubisher'>
                        <image class='pubIcon' src="{{pubIcon}}"></image>
                        <view class='pubName'>
                        <text>发布人：{{pubName}}</text>
                        </view>
                    </view>
                </view>
            </view>
            <view class='rbutton'>
                <view class='rbText'><text>详情</text></view>
                
                <!-- 可能需要先相对定位一下然后使用button-->
            </view>
        </view>
    </view>
</view>
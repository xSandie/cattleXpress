<view class='select'>
        <view class='school' bindtap='changeSchool' >
            <image class='locIcon' src="{{locIcon}}"></image>
            <view class='schoolText'>
                <view hover-class="answerHover" class='realSNText'><text>{{schoolName}}</text></view>
            </view>
            <image class='pullIcon' src='{{pullIcon}}'></image>
        </view>
        <view class='swiper-outer'><swiper
        indicator-dots="true" autoplay="true" circular="true" 
        interval="5000" duration="500">
        <block wx:for="{{ads}}" wx:key="*this" >
          <swiper-item data-ad-id="{{item.id}}" bindtap="toAdDetail">
            <image class="swiper-item" src="{{item.url}}"/>
          </swiper-item>
        </block>
      </swiper></view>
    </view>
<view class='container'>
    <view class='list'>
        <form style="display: flex;flex-direction: column;" report-submit="true" report-submit-timeout="1000" bindsubmit="collect">
            <button form-type="submit" class='listItem' hover-class="answerHover1" wx:key="{{item.id}}" wx:for="{{orderList}}">
                <view class='rowFlex'  data-order-id="{{item.id}}" bindtap="toSumDetail">
                    <view class='reward'>
                        <view class='rcText'>
                            <text>赏金</text>
                        </view>
                        <view class='rnText'>
                            <text>{{item.reward}}</text>
                        </view>
                        <view class='reText'>
                            <text>RMB</text>
                        </view>
                    </view>
                    <view class='body'>
                        <view class='exInstance'>
                            <text>{{item.expStationName}} 送至</text>
                        </view>
                        <view class='sdInstance'>
                            <view class='sdIText'><text>{{item.sendLocSum}}</text></view>
                            <view class='exTagWor' wx:if="{{item.teamOnly}}">
                                <view class='tagText'><text>限团队</text></view>
                            </view>
                            <view class='exTagWor' wx:if="{{item.womanOnly}}">
                                <view class='tagText'><text>限女生</text></view>
                            </view>
                            <view class='exTagWor' wx:if="{{item.manOnly}}">
                                <view class='tagText'><text>限男生</text></view>
                            </view>
                        </view>
                        <view class='exTag'>
                            <view class='exTag exTagWei'>
                                <view class='tagText'><text>重量{{item.expWeight}} | {{item.expSize}}</text></view>
                            </view>
                            <view class='exTag exTagTime'>
                                <view class='tagText'><text>{{item.endTime}}前送达</text></view>
                            </view>
                        </view>
                        <view class='pubisher'>
                            <image class='pubIcon' src="{{pubPersonIcon}}"></image>
                            <view class='pubName'>
                                <text>发布人：{{item.pubName}}</text>
                            </view>
                            <image src="{{viewEye}}" class='view_eye' /><text class='pubName'>{{item.pv ||1}}人查看</text>
                        </view>
                    </view>
                </view>
                <view data-order-id="{{item.id}}" bindtap="toSumDetail" class='rbutton'>
                    <view class='rbText'><text>详情</text></view>
                    <!-- 可能需要先相对定位一下然后使用button-->
                </view>
            </button>
        </form>
        <view class='listItem' wx:key="{{item.id}}" wx:for="{{finishedOrderList}}">
            <view class='rowFlex'  data-order-id="{{item.id}}">
                <view class='my-silver-bg reward'>
                        <view class='rcText'>
                           <text>赏金</text>
                        </view>
                        <view class='rnText'>
                            <text>{{item.reward}}</text>
                        </view>
                        <view class='reText'>
                            <text>RMB</text>
                        </view>
                </view>
                <view class='body'>
                    <view class='exInstance'>
                       <text>{{item.expStationName}} 送至</text>
                    </view>
                    <view class='sdInstance'>
                        <view class='sdIText'><text>{{item.sendLocSum}}</text></view>
                    </view>
                    <view class='exTag'>
                        <view class='exTag exTagWei my-silver-bg'>
                            <view class='tagText my-grey'><text>重量{{item.expWeight}} | {{item.expSize}}</text></view>
                        </view>
                        <view class='exTag exTagTime my-silver-bg'>
                            <view class='tagText my-grey'><text>{{item.endTime}}前送达</text></view>
                        </view>
                    </view>
                    <view class='pubisher'>
                        <image class='pubIcon' src="{{pubPersonIconGrey}}"></image>
                        <view class='pubName my-grey'>
                        <text>发布人：{{item.pubName}}</text>
                        </view>
                    </view>
                </view>
            </view>
            <image class='recBadge' src="{{recBadge}}" />
        </view>
    </view>
    <view class='fbtnBox'>
        <view hover-class="answerHover1" class='floatBtn' wx:if="{{!pubOrTop}}" bindtap="toTop">
            <text class='hBtnText'>回到顶部</text>
            <image class='hBtnIcon' src='{{topIcon}}'></image>
        </view>
        <view hover-class="answerHover1" class='floatBtn' wx:if="{{pubOrTop && !loginFailed}}" bindtap="toPub">
            <text class='hBtnText'>智能发布</text>
            <image class='hBtnIcon' src='{{toTopIcon}}'></image>
        </view>
        <view hover-class="answerHover1" class='jieri' wx:if="{{loginFailed}}" bindtap="relogin">重新登陆</view>
        <!--<view  hover-class="answerHover1" wx:if="{{jieri}}" class='jieri' bindtap='toDaike'>代课专区</view>-->
    </view>
    <view wx:if="{{atEndFlag}}" class='prompt'>
        <view class='lineCss'></view>
        <text>黄牛是有底线的</text>
        <view class='lineCss'></view>
    </view>
    <image wx:if="{{blank}}" class="blankIcon" src="{{blankIcon}}"></image>
    <view wx:if="{{blank}}" class='prompt'>
        <view class='lineCss'></view>
        <text>快去发布第一个订单吧！</text>
        <view class='lineCss'></view>
    </view>
</view>

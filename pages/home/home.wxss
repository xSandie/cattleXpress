.container {
    flex-direction: column;
}

.select {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.school {
    display: flex;
    flex-direction: row;
    align-content: flex-start;
    align-items: flex-start;
    padding-top: 12rpx;
    height: 62rpx;
    width: 100%;
}

.expressLoc {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 138rpx;
    width: 320rpx;

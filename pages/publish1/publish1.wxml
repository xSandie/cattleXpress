<view class='header'>
       <view class='htArea'>
           <text class='lHeader'>先填写基本信息</text>
           <text class='sHeader'>离发布不到1分钟</text>
       </view> 
</view>

<view class='container'>
    <view class='FakeCard'>
    </view>
    <form class='mainForm' bindsubmit="firstOrdSubmit">
        <view class='floatCard'>
            <view class='contactNum'>
                <text class='contactNumTi'>联系电话</text>
                <view>
                <input type="number" name="conPhoneNum" confirm-type="next" placeholder-class="placeHolder" maxlength='11' placeholder="{{DeContactNum}}" class='contactNumCon' />
                </view>
            </view>
            <view class='tline'>   
            </view>
            <view class='recLoc'>
                <text class='recLocTi'>送达地址</text>
                    <view class='recLocDetail'>
                        <picker value="{{sdlocIndex}}" bindchange="sdlocChange" bindcolumnchange="sdlocColumnChange" range="{{sdlocArray}}" mode="multiSelector" name="DeRecLocSel" class='DeRecLocSel'>{{sendLoc}}</picker>
                        <view class='cline'>
                        </view>
                        <input type="text" placeholder-class="placeHolder" maxlength='10' name="DeRecLocIn" placeholder="{{default.sendLocIn}}" class='DeRecLocIn'/>
                    </view>
            </view>
            <view class='setDef'>
                <text>设为默认</text>            
            </view>
            <view class='differLink'>
                <text>· 联系电话与收货手机号的区别</text>
            </view>
        </view>
        <view class='norInfo'>
            <view class='selEx'>
                <view class='Ti'>
                    <text>选择快递</text>
                </view>
                <view>
                    <picker mode="multiSelector" name="selExCon" class='selExCon'>{{selExCon[0][0]}}·{{selExCon[1][0]}}</picker>
                </view>
            </view>
            <view class='rline'>
            </view>
            <view class='exTime'>
                <view class='Ti'>
                    <text>最晚送达时间</text>
                </view>
                <view class='exTimeCon'>
                    <picker name="exTimeConDate" class='DatePi' value="{{date}}" mode="date" start="{{DeDate}}" end="{{EndDate}}">{{date}}</picker>
                    <view class='cline'>
                    </view>
                    <picker name="exTimeConTime" class='TimePi' value="{{time}}" mode="time" start="00:00" end="24:00">{{time}}</picker>
                </view>
            </view>
            <view class='rline'>
            </view>
            <view class='estInfo'>
                <view class='weInfo'>
                    <view class='Ti'>
                        <text>快递重量估计</text>
                    </view>
                    <view>
                        <picker value="{{weIndex}}" bindchange="weInfoChange" range="{{exWeight}}" name="weightInfo" mode="selector" class='weInfoCon' ><text class='weightInfo'>{{exWeight[weIndex]}}</text></picker>
                    </view>                    
                </view>
                <view class='twoInfo'>
                    <view class='sizeInfo'>
                        <view class='Ti'>
                            <text>大小估计</text> 
                        </view>
                        <view>
                            <radio-group name="sizeInfo" class="group" bindchange="checkboxChange">
                            <view class="label-1" wx:for="{{checkboxItems}}">
                                <label>
                                <radio hidden  value="{{item.value}}" checked="{{item.checked}}"></radio> 
                                <view class="label-1__icon" style="color:{{item.checked ? 'white': '#999ba1'}};background:{{item.checked ? '#faaf42': ''}};" ><text>{{item.value}}</text></view>
                                </label>
                            </view>
                            </radio-group>
                        </view>
                    </view>
                    <view bindtap="worcheck" class='worInfo'style="color:{{worchecked?'white':'#999ba1'}};border: {{worchecked?'':'1rpx solid #999ba1'}};background:{{worchecked?'#faaf42':''}};">
                        <text>加急</text>
                    <checkbox-group hidden name="worInfo" bindchange="worChange">
                        <checkbox hidden  value="{{worchecked}}" checked="true"></checkbox>      
                    </checkbox-group>
                    </view> 
                </view>                
            </view>
            <view class='rline'>
            </view>
        <!--    <view class='others'>
                <view class='othersTi'>
                    <text>快递描述</text>
                </view>
                <view>
                    <textarea maxlength='50' type="text" class='othersCon' placeholder="{{lastDep}}" placeholder-class="placeHold" />
                </view>
            </view>-->
            <button class='fakeBtn' bindtap="testTap" formType="submit"><view class='nbtnT'>
                    <text>最后一步</text>
                </view>    
                <image class='nbtnIcon' src="{{nbtnIcon}}"></image></button>
        </view>
        
    </form>
</view>
<view class='header'>
       <view class='htArea'>
           <text class='lHeader'>认真检查一下吧</text>
           <text class='sHeader'>发布后将无法修改</text>
       </view> 
</view>

<view class='container'>
    <view class='FakeCard'>
    </view>
    <form class='mainForm' bindsubmit="finOrdSubmit">
        <view class='floatCard'>
            <view class='contactNum'>
                <text class='contactNumTi'>联系电话</text>
                <view>
                <input type="number" name="conPhoneNum" confirm-type="next" placeholder-class="placeHolder" maxlength='11' placeholder="{{conPhoneNum}}" class='contactNumCon' />
                </view>
            </view>
            <view class='tline'>   
            </view>
            <view class='recLoc'>
                <text class='recLocTi'>送达地址</text>
                    <view class='recLocDetail'>
                        <picker value="{{sdlocIndex}}" bindchange="sdlocChange" bindcolumnchange="sdlocColumnChange" range="{{sdlocArray}}" mode="multiSelector" name="DeRecLocSel" class='DeRecLocSel'>{{sendLoc}}</picker>
                        <view class='cline'>
                        </view>
                        <input type="text" placeholder-class="placeHolder" maxlength='10' name="DeRecLocIn" placeholder="{{sendLocIn}}" class='DeRecLocIn'/>
                    </view>
            </view>
            <view class='tline'>   
            </view>
            <view class="secA">
                <view class="exName">
                    <view class="Ti">收货姓名</view>
                    <input type="text" placeholder="{{recName}}" placeholder-class="placeHolder" name="recName" class="recName"/>
                </view>
                <view class="cline1">
                </view>
                <view class="numRear">
                    <view class="Ti">手机尾号</view>
                    <input type="number" placeholder="{{phoneRear}}" placeholder-class="placeHolder" class="phoneRear" name="phoneRear" />
                </view>
            </view>
            <view class='setDef' bindtap="setDef">
                <text wx:if="{{setDef==true}}">取消设为默认</text>
                <text wx:if="{{setDef==false}}">设为默认</text>
                <switch checked="{{setDef}}" hidden name="setDef"/>       
            </view>
            <view class='differLink' catchtap="differLink">
                <text>· 联系电话与收货手机号的区别</text>
            </view>
        </view>
        <view class='norInfo'>
            <view class='selEx'>
                <view class='Ti'>
                    <text>选择快递</text>
                </view>
                <view>
                    <picker bindchange="exlocChange" bindcolumnchange="exlocColumnChange" range="{{exlocArray}}" mode="multiSelector" name="selExCon" class='selExCon'>{{expressLoc}}</picker>
                </view>
            </view>
            <view class='rline'>
            </view>
            <view class='exTime'>
                <view class='Ti'>
                    <text>最晚送达时间</text>
                </view>
                <view class='exTimeCon'>
                    <picker name="exTimeConDate" bindchange="dateChange" class='DatePi' value="{{dateIndex}}" range="{{dateRange}}" mode="selector">{{dateRange[dateIndex]}}</picker>
                    <view class='cline'>
                    </view>
                    <picker name="exTimeConTime" class='TimePi' value="{{time}}" bindchange="bindTimeChange" mode="time" start="00:00" end="24:00">{{time}}</picker>
                </view>
            </view>
            <view class='rline'>
            </view>
            <view class="formMain">
            <view class="deInfo">
                <view class="secInfo">
                    <view class="fetchA">
                        <view class="Ti">
                            <text>取货码</text>
                        </view>
                        <input type="text" placeholder-class="placeHolder" value="{{fetchCode}}" name="fetchCode" placeholder="{{fetchCode}}" class="fetchCode"/>
                    </view>
                    <view class="sexLimitA">
                        <view class="Ti">
                            <text>代领人性别限制</text>
                        </view>
                        <picker value="{{sexIndex}}" bindchange="sexLimitChange" range="{{sexLimRange}}" mode="selector" name="sexLimit" class='sexLimit'>{{sexLimRange[sexIndex]}}</picker>
                    </view>
                </view>
                <view class='rline'>
                </view>
                <view class="reward">
                    <view class="Ti">支付赏金·天气不好时记得多加点小费噢</view>
                    <view class="reInA" >
                        <view>
                            <input type="number" name="rewardIn" placeholder-class="placeHolder" placeholder="{{reward}}" class="reIn" />
                        </view>
                        <view class="yuan">
                            <text>元</text>
                        </view>
                    </view>
                </view>
                <view class='rline'>
                </view>

                <view class='estInfo'>
                    <view class='weInfo'>
                        <view class='Ti'>
                            <text>快递重量估计</text>
                        </view>
                        <view>
                            <picker value="{{weIndex}}" bindchange="weInfoChange" range="{{exWeight}}" name="weightInfo" mode="selector" class='weInfoCon' >{{exWeight[weIndex]}}</picker>
                        </view>                    
                    </view>
                    <view class='twoInfo'>
                        <view class='sizeInfo'>
                            <view class='Ti'>
                                <text>大小估计</text> 
                            </view>
                            <view>
                                <radio-group name="sizeInfo" class="group" bindchange="checkboxChange">
                                <view class="label-1" wx:for="{{checkboxItems}}">
                                    <label>
                                    <radio hidden  value="{{item.value}}" checked="{{item.checked}}"></radio> 
                                    <view class="label-1__icon" style="color:{{item.checked ? 'white': '#999ba1'}};background:{{item.checked ? '#faaf42': ''}};" ><text>{{item.value}}</text></view>
                                    </label>
                                </view>
                                </radio-group>
                            </view>
                        </view>
                        <view bindtap="worcheck" class='worInfo'style="color:{{worchecked?'white':'#999ba1'}};border: {{worchecked?'':'1rpx solid #999ba1'}};background:{{worchecked?'#faaf42':''}};">
                            <text>加急</text>
                            <switch checked="{{worchecked}}" hidden name="worInfo"/>
                        </view> 
                    </view>                
                </view>
                <view class='rline'>
                </view>
                <view class='others'>
                    <view class='othersTi'>
                        <text>快递描述</text>
                    </view>
                    <view>
                        <textarea name="otherInfo" maxlength='50' type="text" class='othersCon' placeholder="{{lastDep}}" />
                    </view>
                </view>
            </view>
       </view>
            <button hover-class="button-hover" class='fakeBtn' formType="submit"><view class='nbtnT'>
                    <text>发布</text>
                </view>    
                <image class='nbtnIcon' src="{{nbtnIcon}}"></image></button>
        </view>
        
    </form>
</view>